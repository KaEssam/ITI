@model ASP.Net_MVC_Day3.Models.BookFormViewModel
@{
    ViewBag.Title = "Create";
}

<h3 class="text-secondary">
    @(Model.Id == 0  ? "Add New Book" : "Edit Book")
</h3>

<hr />

@using (Html.BeginForm("Save", "Books", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group m-2">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "true" })
        <div class="invalid-feedback">Please enter a title.</div>
    </div>

    <div class="form-group m-2">
        @Html.LabelFor(m => m.Author)
        @Html.TextBoxFor(m => m.Author, new { @class = "form-control", required = "true" })
        <div class="invalid-feedback">Please enter an author.</div>
    </div>

    <div class="form-group m-2">
        @Html.LabelFor(m => m.CategoryId)
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "id", "Name"), "Select Category", new { @class = "form-control", required = "true" })
        <div class="invalid-feedback">Please select a category.</div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>

        <a href="@Url.Action("Index")" class="btn btn-primary ml-2 m-4">
            <i class="bi bi-arrow-left"></i>
            Back to List
        </a>
    </div>

}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}