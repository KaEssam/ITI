
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>index</title>
</head>
<body>
    <div>
        @using ASP.Net_MVC_Day2.Models;
        @{
            List<Employee> employee = ViewData["CompanyDBContext"] as List<Employee>;
        }
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Salary</th>
                </tr>
                <tr>
                    <th></th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in employee)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Salary</td>
                        <td><a href="~/Employee/Update/@item.ID">Update</a></td>
                        <td><a href="~/Employee/Remove/@item.ID">Remove</a></td>
                    </tr>
                    <a href="~/Employee/add">add</a>

                }
            </tbody>
    </div>
</body>
</html>
